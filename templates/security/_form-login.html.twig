<form method="post" action="{{ path('app_login') }}">
    <div class="col-md-5 m-auto pt-5">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>
    {% if app.user %}
        <div class="mb-3">
            Votre login est {{ app.user.username }}, <a href="{{ path('app_logout') }}">Ce d√©connecter</a>
        </div>
    {% endif %}
    <div class="container">
        <div class="row pt-5">
            <div class="col-md6 m-auto">
                <div class="bg-light py-3 px-3">
                    <h1>Connectez vous !</h1>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control"
                               placeholder="Adresse email ..." required>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control"
                               placeholder="Mot de passe ..." required>
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion !</button>
                    </div>

                    <button class="btn btn-lg btn-primary" type="submit">
                        inscrivez-vous !
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
