                            <span class="h5">Gestion des utilisateurs</span>
                            <img src="{{ asset('img/admin_user.png') }}" width="15%" alt="">
                        </button>
                    </a>
                    <a class="text-decoration-none" href="{{ path('admin_news_index') }}">
                        <button class="btn btn-primary w-100 d-flex justify-content-between">
                            <span class="h5">Gestion des news</span>
                            <img src="{{ asset('img/admin_news.png') }}" width="15%" alt="">
                        </button>
                    </a>
            </div>
        </div>
    {% endif %}

