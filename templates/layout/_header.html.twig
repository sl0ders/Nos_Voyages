<header class="container-fluid position-relative w-100">
    <nav class="navbar navbar-expand-sm w-100">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavId"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><img src="{{ asset('img/svg/toggle-bar.svg') }}" alt=""></span>
        </button>
        <a class="navbar-nav mt-0 mt-lg-0 pointer-event nav-link mr-5" href="/">
            <img src="{{ asset('img/svg/home.svg') }}" width="30" alt="">
        </a>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav ml-auto">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="" href="{{ path('admin_home') }}">
                        <button class="btn btn-primary">Administration</button>
                    </a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                    <a class="" href="{{ path('app_logout') }}">
                        <button class="btn btn-danger">deconnection</button>
                    </a>
                {% else %}
                    <div class="nav-link text-center">
                        <form action="{{ path('app_login') }}" method="post" class="form-group">
                            <label for="adresse_email">
                                <input type="text" name="_username" placeholder="Adresse email ..." id="adresse_email"
                                       class="form-control">
                            </label>
                            <label for="mot_de_passe">
                                <input type="text" name="_password" id="mot_de_passe" placeholder="Mot de passe ..."
                                       class="form-control">
                            </label>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button type="submit" class="m-auto p-0 btn-primary btn head">
                                <img class="" src="{{ asset('img/arrowhead.svg') }}" alt="">
                            </button>
                        </form>
                    </div>
                    <a class="nav-link" href="{{ path('app_signhup') }}">
                        <span class="text-white">Si vous n'etes pas encore inscrit <img
                                    src="{{ asset('img/arrowhead.svg') }}" alt=""></span>
                        <button class="btn head btn-primary">S'inscrire</button>
                    </a>
                {% endif %}
            </ul>
        </div>
    </nav>
    <h1 class="text-white text-center">Une vie, des voyages</h1>
</header>