<header>
    <div class="banner">
        <a href="{{ path('homepage') }}">
            <img style="opacity:0.9" src="{{ asset('img/home.png') }}" width="3%" alt="">
        </a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_home') }}">
                <button type="button" href="{{ path('admin_home') }}" class="btn button-primary admin-btn">Acceder a
                    l'administration
                </button>
            </a>
        {% endif %}
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
            <a href="{{ path('app_logout') }}">
                <button name="deconnection" type="submit" class="btn button-primary deconnection">Se d√©connecter
                </button>
            </a>
        {% else %}

            <form action="{{ path('app_login') }}" method="post" class="connection form-group">
                <label for="adresse_email">
                    <span>Email</span>
                    <input type="text" name="_username" placeholder="Adresse email ..." id="adresse_email"
                           class="form-control">
                </label>
                <label for="mot_de_passe">
                    <span>Mot de passe</span>
                    <input type="text" name="_password" id="mot_de_passe" placeholder="Mot de passe ..."
                           class="form-control">
                </label>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit"
                        style="background-color: transparent; border:none; cursor: pointer;margin-top: 20px">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="20" viewBox="0 0 24 24">
                        <path d="M12 4v-4l12 12-12 12v-4h-12v-16z" fill="white"/>
                    </svg>
                </button>
            </form>
        {% endif %}
        <h1>Une vie, des voyages</h1>
    </div>

</header>