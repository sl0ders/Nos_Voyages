{% extends 'base.html.twig' %}

{% block title %}Visualisation des photes de {{ city }}{% endblock %}

{% block body %}
    <h2>Photo de {{ city }}</h2>
    <div class="gridhome overflow-hidden">
    {% for picture in pictures %}
        {% if picture.filename %}
                <a class="text-center" style="margin-bottom: 20px;" href="{{ path('profile_picture_show', {'id': picture.id , 'country': picture.country, 'city' : picture.city}) }}">
                    Voir les details de la photo
                    <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumb')}}" alt="">
                </a>
        {% endif %}
    {% endfor %}
    </div>
{% endblock %}
