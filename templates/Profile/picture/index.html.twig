{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="grid">
        {% for picture in pictures %}
            {% if picture.filename %}
                <div class="d-flex flex-wrap">
                    <a class="d-flex" href="{{ path('profile_picture_show', {'id': picture.id , 'country': picture.country, 'city' : picture.city}) }}">
                        <img style="width: 10%" src="{{ asset('img/arrowx.png') }}" alt="">
                        Voir les details de la photo
                    </a>
                    <a href="{{ vich_uploader_asset(picture, 'imageFile') }}">
                        <img src="{{ vich_uploader_asset(picture, 'imageFile') }}" alt="">
                        <div class="bubble-text">
                            <h3>{{ picture.title }}</h3>
                            <p>{{ picture.description }}...</p>
                            <em>{{ picture.author }} le {{ picture.dayOfTaking }}</em>
                        </div>
                    </a>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
