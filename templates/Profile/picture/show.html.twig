            <h3 class="text-center">Les commentaires</h3>
                {% for comments in picture.comments %}
                    <div class="comment">
                       <p> {{ comments.content }}</p> <br>
                           <em>{{ comments.author }}({{ comments.createdAt | date('d/m/Y H:i:s') }})</em>
                    </div>
                {% endfor %}
            {% include('Profile/comment/_form.html.twig') %}
        </div>
    </div>
{% endblock %}





