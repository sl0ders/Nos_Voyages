{% extends 'base.html.twig' %}
{% block title %}Détail de la photo{% endblock %}
{% block body %}
    <h2 class="text-center">{{ picture.title }}</h2>
    <p class="text-left">{{ picture.description }}</p>
    <div class="row">
        <a class="col-md-8" href="{{ vich_uploader_asset(picture, 'imageFile') }}">
            <img class="col-md-12" src="{{ vich_uploader_asset(picture, 'imageFile') }}" alt="">
        </a>
        <div class="col-md-4">
            <h3 class="text-center">Les commentaires</h3>
            {% for comments in picture.comments %}
                {% if comments.enabled == true %}
                    <div class="comment border">
                        <p>{{ comments.content }}</p>
                        <br>
                        <em style="text-align: right">{{ comments.author }}
                            ({{ comments.createdAt | date('d/m/Y H:i:s') }})</em>
                    </div>
                {% endif %}
            {% endfor %}
            {% if is_granted('ROLE_USER') %}
                {% include('Profile/comment/_form.html.twig') %}
            {% endif %}
            {% for comment in picture.comments %}
            <div class="card mt-5">
                <div class="card-body">
                    <h5 class="card-title">Posté par {{  comment.author }} le <em style="font-size: 0.6em">{{ comment.createdAt | date('d/m/Y H:i:s') }}</em></h5>
                    <p class="card-text">
                        {{ comment.content }}
                    </p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}





