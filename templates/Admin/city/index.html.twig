{% extends 'base.html.twig' %}

{% block title %}Index de l'administration des villes{% endblock %}

{% block body %}
    <h2 class="h1 text-center p-5">Index de l'administration des villes</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom de la ville</th>
            <th>Nom de son pays</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.name }}</td>
                <td>{{ city.country }}</td>
                <td>
                    <div class="d-flex justify-content-center">
                        {{ include('admin/city/_delete_form.html.twig') }}
                        <a href="{{ path('admin_city_edit', {'id': city.id}) }}">
                            <button class="btn button-primary mt-1 ml-2">Editer</button>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune ville enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('admin_country_index') }}"><img style="transform: rotate(180deg)" src="{{ asset('img/arrowx.png') }}" alt="">Revenir a l'index de gestion des pays</a>
    <div id="modal1" class="modal">
        <div class="container">
            <div class="modal-content">

            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            //On écoute le "click" sur le bouton ayant la classe "modal-trigger"
            $('.modal-trigger').click(function () {
                //On initialise les modales materialize
                $('.modal').modal();
                //On récupère l'url depuis la propriété "Data-target" de la balise html a
                url = $(this).attr('data-target');
                //on fait un appel ajax vers l'action symfony qui nous renvoie la vue
                $.get(url, function (data) {
                    //on injecte le html dans la modale
                    $('.modal-content').html(data);
                    //on ouvre la modale
                    $('#modal1').modal();
                });
            })
        });
    </script>
{% endblock %}
