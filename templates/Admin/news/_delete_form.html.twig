<form method="post" action="{{ path('admin_news_delete', {'id': news.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cette news?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.id) }}">
    <button class="btn-sm btn button-danger">Supprimer la news</button>
</form>
