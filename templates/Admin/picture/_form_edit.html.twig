<div class="text-center mb-5">
    <img id="output" src="{{ vich_uploader_asset(picture, 'imageFile')|imagine_filter('thumb') }}" width='500' alt="">
</div>
{{ form_start(form, {'action' : path('admin_picture_edit', {'id' : picture.id})}) }}
{{ form_row(form.title,{'label': 'Titre' }) }}
{{ form_row(form.author,{'label': 'Auteur' }) }}
{{ form_row(form.imageFile,{'attr': {'accept': 'image/', 'onchange': 'loadFile(event)'}}) }}
{{ form_row(form.description,{'label': 'Description' }) }}
<button class="btn">{{ button_label|default('Modifier') }}</button>
{{ form_end(form) }}
<script>
    var loadFile = function(event) {
        var output = document.getElementById('output');
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
