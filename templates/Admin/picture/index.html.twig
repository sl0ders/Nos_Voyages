{% extends 'base.html.twig' %}

{% block title %}Picture index{% endblock %}

{% block body %}
    <h1>Picture index</h1>

    <a data-target="{{ path('admin_picture_new') }}" data-tooltip="voir"
       class="tooltipped modal-trigger btn right-align"
       href="#modal1">
        <button class="button-primary btn">
            Inserer une nouvelle image
        </button>
    </a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Images</th>
            <th>Titres</th>
            <th>Description</th>
            <th>Pays</th>
            <th>City</th>
            <th>Jour de la prise</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.id }}</td>
                <td>
                    <a href="{{ vich_uploader_asset(picture, 'imageFile') }}">
                        <img src="{{ vich_uploader_asset(picture, 'imageFile')|imagine_filter('thumb') }}"
                             alt="{{ picture.title }}" width="250" height="250">
                    </a>
                </td>
                <td>{{ picture.title }}</td>
                <td>{{ picture.description }}</td>
                <td>{{ picture.pays }}</td>
                <td>{{ picture.city }}</td>
                <td>{{ picture.dayOfTaking }}</td>
                <td class="d-flex justify-content-center">
                    <a data-target="{{ path('admin_picture_edit', {'id': picture.id}) }}" data-tooltip="voir"
                       class="tooltipped modal-trigger btn right-align"
                       href="#modal1">
                        <button class="button-primary btn">
                            Éditer
                        </button>
                    </a>
                    {{ include('Admin/picture/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="modal1" class="modal">
        <div class="container">
            <div class="modal-content">

            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            //On écoute le "click" sur le bouton ayant la classe "modal-trigger"
            $('.modal-trigger').click(function () {
                //On initialise les modales materialize
                $('.modal').modal();
                //On récupère l'url depuis la propriété "Data-target" de la balise html a
                url = $(this).attr('data-target');
                //on fait un appel ajax vers l'action symfony qui nous renvoie la vue
                $.get(url, function (data) {
                    //on injecte le html dans la modale
                    $('.modal-content').html(data);
                    //on ouvre la modale
                    $('#modal1').modal();
                });
            })
        });
    </script>
{% endblock %}




